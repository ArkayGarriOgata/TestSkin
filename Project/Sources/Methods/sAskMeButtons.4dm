	OBJECT SET ENABLED:C1123(b2New; True:C214)
	OBJECT SET ENABLED:C1123(b2Edit; True:C214)
	
	OBJECT SET ENABLED:C1123(b3Find; True:C214)
	OBJECT SET ENABLED:C1123(b3Sort; True:C214)
	
	OBJECT SET ENABLED:C1123(b4Find; True:C214)
	OBJECT SET ENABLED:C1123(b4Sort; True:C214)
	
	OBJECT SET ENABLED:C1123(b4Edit; True:C214)
	OBJECT SET ENABLED:C1123(bShipInst; True:C214)
	
	OBJECT SET ENABLED:C1123(b3Kill; True:C214)
	
	If (User in group:C338(Current user:C182; "RoleQA_Certification"))
		OBJECT SET ENABLED:C1123(b3Cert; True:C214)
	End if 
End if 